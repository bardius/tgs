<div class="large-12 small-12 columns homepageListing">
    {% for pageItem in pages %}
            
        {% if pageItem.pagetype == 'blog_home' or pageItem.pagetype == 'blog_article' %}
            {% set vars = {'urlPart': 'blog/'} %}
        {% elseif pageItem.pagetype == 'destination_home' or pageItem.pagetype == 'destination_cat_page' or pageItem.pagetype == 'destination_article' %}
            {% set vars = {'urlPart': 'destination/'} %}
        {% elseif pageItem.pagetype == 'product_home' or pageItem.pagetype == 'product_cat_page' or pageItem.pagetype == 'product_article' %}
            {% set vars = {'urlPart': 'product/'} %}
        {% else %}
            {% set vars = {'urlPart': ''} %}
        {% endif %} 

        {% if loop.index % 3 == 1 %}    
        <div class="columns homepageItem homepageItem{{ loop.index }} {% if pageItem.introclass is not null %}{{ pageItem.introclass }}{% endif %} large-3 small-6">
            {% include 'PageBundle:Contents:homepage-item-three.html.twig' with vars %}
        </div>
        {% elseif loop.index % 3 == 2 %}
        <div class="columns homepageItem homepageItem{{ loop.index }} {% if pageItem.introclass is not null %}{{ pageItem.introclass }}{% endif %} large-6 small-6">
            {% include 'PageBundle:Contents:homepage-item-six.html.twig' with vars %}
        </div>
        {% elseif loop.index % 3 == 0 %}
        <div class="columns homepageItem homepageItem{{ loop.index }} {% if pageItem.introclass is not null %}{{ pageItem.introclass }}{% endif %} large-3 small-6">
            {% include 'PageBundle:Contents:homepage-item-three.html.twig' with vars %}
        </div>
        {% endif %}
    {% endfor %}
</div>