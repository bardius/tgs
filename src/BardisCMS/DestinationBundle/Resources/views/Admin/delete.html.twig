{% if admin.hasRoute('delete') and admin.id(object) and admin.isGranted('EDIT', object)%}
    <a class="btn btn-danger sonata-action-element" href="{{ admin.generateObjectUrl('delete', object) }}" title="{{ 'Delete'|trans({}, 'SonataAdminBundle') }}">
		<i class="glyphicon glyphicon-trash"></i>
		{{ 'Delete'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}