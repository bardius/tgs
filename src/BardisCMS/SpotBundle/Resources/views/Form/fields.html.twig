{# Overrides for the contact form fields row etc #}
{% extends 'form_div_layout.html.twig' %}
			
{% block form_row %}
{% spaceless %}
        {{ form_label(form) }}
        {{ form_widget(form) }}
		{{ form_errors(form) }}
{% endspaceless %}
{% endblock %}


{# form_errors #}
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <small class="error">
        {% for error in errors %}
            {{ error.message }}
        {% endfor %}
    </small>
    {% endif %}
{% endspaceless %}
{% endblock %}


{# form_label #}
{% block form_label %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label class="columns large-2 small-12" for="{{ id }}">
		{{ label|trans }}
		{% if required %}
            <span class="symfony-form-required" title="This field is required">*</span>
        {% endif %}
    </label>
{% endblock %}


{# form_rows #}
