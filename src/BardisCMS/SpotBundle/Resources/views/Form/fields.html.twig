{% spaceless %}
    {% for child in form %}
	<div class="columns large-3 small-4">
		{{ form_widget(child) }}		
		{{ form_label(child) }}
		{{ form_errors(child) }}
	</div>
    {% endfor %}
{% endspaceless %}
{% endblock %}

