<div class="twelve column {{ pageItem.pagetype }}Item {% if pageItem.introclass is not null %}{{ pageItem.introclass }}{% endif %}">
    <a href="{{ url('RecipeBundle_page_normal', { 'alias': pageItem.alias }) }}" title="{{ pageItem.title }}">
        {% if pageItem.recipeimage.id is defined %}
        {% media pageItem.recipeimage.id, 'small' with {'alt': pageItem.title, 'title': ''} %}
        {% else %}
        <img src="/images/site_assets/defaultRecipeThumb.jpg" alt="{{ pageItem.title }}" />
        {% endif %}
        <div class="relatedItemText  {% if pageItem.product.pageclass is defined %}{{ pageItem.product.pageclass }}{% endif %}">
            <h5 class="title"><span>{{ pageItem.title }}</span></h5>
            <span class="itemIcon preperation">{{ pageItem.preperation }}</span>
            <span class="itemIcon cooking">{{ pageItem.cooking }}</span>
            <span class="itemIcon servings">{{ pageItem.servings }}</span>
        </div>
    </a>
</div>