                    <div id="filterResultsFormHolder" class="columns twelve mobile-nine">
                        <h3>Filter our recipes</h3>
                        <form name="filterResultsForm" id="filterResultsForm" action="/recipe/filterPages/" method="post" {{ form_enctype(filterForm) }} class="filterForm">
                              
                            <div class="column three mobile-four">  
                                {{ form_row(filterForm.categories, { 'attr': {'class': 'customCheckBox'} }) }}
                            </div>
                              
                            <div class="column three mobile-four">  
                                {{ form_row(filterForm.tagsoccasions, { 'attr': {'class': 'customCheckBox'} }) }}
                            </div>
                              
                            <div class="column three mobile-four filtersGroupClear">  
                                {{ form_row(filterForm.tagseveryday, { 'attr': {'class': 'customCheckBox'} }) }}
                            </div>
                              
                            <div class="column three mobile-four">  
                                {{ form_row(filterForm.tagsfavourites, { 'attr': {'class': 'customCheckBox'} }) }}
                            </div>
                              
                            <div class="column twelve mobile-nine">  
                                {{ form_rest(filterForm) }}
                                {{ form_errors(filterForm) }}
                            </div>
                              
                            <div class="formBtns mobile-nine">
                                <div class="control-group">
                                    <input type="submit" id="filterResultsBtn" value="GO" />
                                    <div class="customCheckBox checkAllBox">
                                        <input class="checkAllBtn" type="checkbox" id="CheckAll" name="CheckAll" value="1" />
                                        <label for="CheckAll">Show All</label>
                                    </div>
                                </div>
                            </div>
                        </form>
                     </div>