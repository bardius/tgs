<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
      <service id="sonata.admin.pages" class="BardisCMS\PageBundle\Admin\PageAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Pages" label="Manage Website Pages" />
          <argument />
          <argument>BardisCMS\PageBundle\Entity\Page</argument>
          <argument>PageBundle:PageAdmin</argument>
          <call method="setTranslationDomain">
              <argument>PageBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.categories" class="BardisCMS\CategoryBundle\Admin\CategoryAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Category" label="Manage Categories" />
          <argument />
          <argument>BardisCMS\CategoryBundle\Entity\Category</argument>
          <argument>CategoryBundle:CategoryAdmin</argument>
          <call method="setTranslationDomain">
              <argument>CategoryBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.tags" class="BardisCMS\TagBundle\Admin\TagAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Tag" label="Manage Tags" />
          <argument />
          <argument>BardisCMS\TagBundle\Entity\Tag</argument>
          <argument>TagBundle:TagAdmin</argument>
          <call method="setTranslationDomain">
              <argument>TagBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.blogs" class="BardisCMS\BlogBundle\Admin\BlogAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Blog" label="Manage Blog Pages" />
          <argument />
          <argument>BardisCMS\BlogBundle\Entity\Blog</argument>
          <argument>BlogBundle:BlogAdmin</argument>
          <call method="setTranslationDomain">
              <argument>BlogBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.recipes" class="BardisCMS\RecipeBundle\Admin\RecipeAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Recipe" label="Manage Recipe Pages" />
          <argument />
          <argument>BardisCMS\RecipeBundle\Entity\Recipe</argument>
          <argument>RecipeBundle:RecipeAdmin</argument>
          <call method="setTranslationDomain">
              <argument>RecipeBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.products" class="BardisCMS\ProductBundle\Admin\ProductAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Product" label="Manage Product Pages" />
          <argument />
          <argument>BardisCMS\ProductBundle\Entity\Product</argument>
          <argument>ProductBundle:ProductAdmin</argument>
          <call method="setTranslationDomain">
              <argument>ProductBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.menus" class="BardisCMS\MenuBundle\Admin\MenuAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Menus" label="Manage Menus" />
          <argument />
          <argument>BardisCMS\MenuBundle\Entity\Menu</argument>
          <argument>MenuBundle:MenuAdmin</argument>
          <call method="setTranslationDomain">
              <argument>MenuBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.recipecategories" class="BardisCMS\RecipeBundle\Admin\RecipeCategoriesAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Recipe Categories" label="Manage Recipe Categories" />
          <argument />
          <argument>BardisCMS\RecipeBundle\Entity\RecipeCategory</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>RecipeBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.productcategories" class="BardisCMS\ProductBundle\Admin\ProductCategoriesAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Product Categories" label="Manage Product Categories" />
          <argument />
          <argument>BardisCMS\ProductBundle\Entity\ProductCategory</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>ProductBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.recipetags" class="BardisCMS\RecipeBundle\Admin\RecipeTagsAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Recipe Tags" label="Manage Recipe Tags" />
          <argument />
          <argument>BardisCMS\RecipeBundle\Entity\RecipeTag</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>RecipeBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.producttags" class="BardisCMS\ProductBundle\Admin\ProductTagsAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Product Tags" label="Manage Product Tags" />
          <argument />
          <argument>BardisCMS\ProductBundle\Entity\ProductTag</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>ProductBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.contentblocks" class="BardisCMS\PageBundle\Admin\ContentBlockAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Content Blocks" label="Manage Content Blocks" />
          <argument />
          <argument>BardisCMS\PageBundle\Entity\ContentBlock</argument>
          <argument>SonataAdminBundle:CRUD</argument>
          <call method="setTranslationDomain">
              <argument>PageBundle</argument>
          </call>
      </service>
      <service id="sonata.admin.settings" class="BardisCMS\SettingsBundle\Admin\SettingsAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Settings" label="Manage Website Settings" />
          <argument />
          <argument>BardisCMS\SettingsBundle\Entity\Settings</argument>
          <argument>SettingsBundle:SettingsAdmin</argument>
          <call method="setTranslationDomain">
              <argument>SettingsBundle</argument>
          </call>
      </service>
      <service id="sonata.media.resizer.bardiscms" class="BardisCMS\PageBundle\Media\Resizer\BardisCMSResizer">
            <tag name="sonata.media.resizer" />
            <argument type="service" id="sonata.media.adapter.image.gd" />
      </service> 
      <service id="sonata_user.form.type.registration" class="Application\Sonata\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="registration" />
            <argument>%fos_user.model.user.class%</argument>
      </service>      
   </services>
</container>
